{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "sids-blog",
  "main": "src/index.ts",
  "compatibility_date": "2024-12-29",
  "compatibility_flags": ["nodejs_compat"],

  "observability": {
    "enabled": true,
    "head_sampling_rate": 1
  },

  "assets": {
    "directory": "./public",
    "binding": "ASSETS",
    "not_found_handling": "none"
  },

  "rules": [
    {
      "type": "Text",
      "globs": ["**/*.md"],
      "fallthrough": false
    }
  ]
}
